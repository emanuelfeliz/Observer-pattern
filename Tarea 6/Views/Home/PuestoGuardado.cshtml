@model IEnumerable<Tarea_6.Models.PuestosModels>
@{
    ViewData["Title"] = "PuestoGuardado";
}

<div class="text-center">
    <h1 class="mb-5">Puesto:</h1>


    <table class="table">
        <thead>
            <tr>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Puesto)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Salario)
                </th>
                <th scope="col">
                    @Html.DisplayNameFor(model => model.Estatus)
                </th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
             {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Puesto)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salario)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Estatus)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditarPuesto", new { puesto = item.Puesto })
                        @Html.ActionLink("Delete", "Delete", new { })
                    </td>
                </tr>
             }



        </tbody>


    </table>
</div>


